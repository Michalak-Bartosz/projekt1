{% extends "./base.html.twig" %}

{% block body %}
	<div class="sm:w-3/5 w-4/5 mx-auto">
		<h1 class="pt-28 sm:text-5xl md:text-7xl text-4xl font-bold text-center">
			{{ event.name }}
		</h1>

		<div class="py-10 text-center">
			<h3 class="text-gray-500 font-bold text-2xl py-2">
				{{ event.date|date('d-m-Y') }}
			</h3>

			<img src="{{ event.imagePath }}" class="rounded-xl max-w-72 max-h-72 mx-auto shadow-xl"/>

			<p class="text-xl py-6">
				{{ event.description }}
			</p>

			<a href="/events/edit/{{ event.id }}" class="bg-green-500 font-bold py-2 px-4 rounded transition-all hover:bg-green-300">
				Edit Trip
			</a>

			<a href="/events/delete/{{ event.id }}" class="bg-red-500 font-bold py-2 px-4 ml-6 rounded transition-all hover:bg-red-300">
				Delete Trip
			</a>
		</div>
	</div>
{% endblock %}
